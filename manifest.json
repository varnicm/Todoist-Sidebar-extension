{
    "name": "Todoist Sidebar",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Display Todoist in Google Chrome Sidebar",
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "side_panel": {
      "default_path": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "sidePanel",
      "identity",
      "tabs",
      "storage"
        ],
    "host_permissions": [
      "https://todoist.com/*"
  ],
   "oauth2": {
      "client_id": "58267cc5cbd542478775454401832e86",
      "scopes": [
        "data:read"
      ],
      "redirect_uris": ["https://moesanjari.com/redirect.php"]
   },
   "content_scripts": [
    {
      "matches": ["https://todoist.com/*"],
      "js": ["script.js"]
    }
  ]  

  }


  